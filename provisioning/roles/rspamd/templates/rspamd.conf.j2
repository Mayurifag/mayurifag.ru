upstream rspamd_webui {
  server 127.0.0.1:11334;
}

server {
  listen 443 ssl http2;

  server_name rspamd.{{ default_hostname }};

  include extra/ssl;
  include extra/security;

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass http://rspamd_webui;
  }
}
