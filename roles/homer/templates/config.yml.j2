title: "{{ server_hostname }}"
subtitle: "Dashboard"

documentTitle: "{{ server_hostname }} dashboard"
icon: "fas fa-skull-crossbones"
header: true
footer: false

columns: "3"
theme: default

colors:
  dark:
    highlight-primary: "#3367d6"
    highlight-secondary: "#4285f4"
    highlight-hover: "#5a95f5"
    background: "#131313"
    card-background: "#2b2b2b"
    text: "#eaeaea"
    text-header: "#ffffff"
    text-title: "#fafafa"
    text-subtitle: "#f5f5f5"
    card-shadow: rgba(0, 0, 0, 0.4)
    link-hover: "#ffdd57"

services:
  - name: "Monitoring"
    icon: "fas fa-desktop"
    items:
{% if traefik_enabled == true %}
      - name: "Traefik Dashboard"
        icon: "fas fa-traffic-light"
        subtitle: "BaseAuth"
        url: "http://{{ traefik_subdomain }}.{{ server_hostname }}/dashboard/"
{% endif %}
{% if dozzle_enabled == true %}
      - name: "Dozzle"
        icon: "fas fa-tablet-rugged"
        subtitle: "App auth"
        url: "http://{{ dozzle_subdomain }}.{{ server_hostname }}"
{% endif %}
{% if glances_enabled == true %}
      - name: "Glances"
        icon: "fas fa-microchip"
        subtitle: "BaseAuth"
        url: "http://{{ glances_subdomain }}.{{ server_hostname }}"
{% endif %}
{% if netdata_enabled == true %}
      - name: "Netdata"
        icon: "fas fa-chart-bar"
        subtitle: "BaseAuth"
        url: "http://{{ netdata_subdomain }}.{{ server_hostname }}"
{% endif %}

  - name: "Services"
    icon: "fas fa-laptop-code"
    items:
{% if nextcloud_enabled == true %}
      - name: "Nextcloud"
        icon: "fas fa-cloud"
        subtitle: "Auth need to configure"
        url: "http://{{ nextcloud_subdomain }}.{{ server_hostname }}"
{% endif %}
{% if seafile_enabled == true %}
      - name: "Seafile"
        icon: "fas fa-cloud"
        subtitle: "Auth need to configure"
        url: "http://{{ seafile_subdomain }}.{{ server_hostname }}"
{% endif %}
{% if portainer_enabled == true %}
      - name: "Portainer"
        icon: "fas fa-toolbox"
        subtitle: "Auth need to configure"
        url: "http://{{ portainer_subdomain }}.{{ server_hostname }}"
{% endif %}
{% if wallabag_enabled == true %}
      - name: "Wallabag"
        icon: "fas fa-bookmark"
        subtitle: "Auth need to configure from wallabag:wallabag to mine password"
        url: "http://{{ wallabag_subdomain }}.{{ server_hostname }}"
{% endif %}
