[Interface]
Address = {{ wireguard_vpn_network }}.{{item|int + 1}}/32
DNS = {{ wireguard_vpn_network }}.1
PrivateKey = {{ private_key_files.results[item|int].stdout }}

[Peer]
PublicKey = {{ public_key_files.results[0].stdout }}
AllowedIPs = 0.0.0.0/0
Endpoint = {{ ansible_default_ipv4.address }}:{{ wireguard_vpn_port }}
PersistentKeepalive = {{ wireguard_vpn_persistent_keepalive }}
